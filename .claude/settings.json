{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "skills": {
    "enabled": true,
    "paths": [
      ".claude/skills"
    ]
  },
  "agents": {
    "enabled": true,
    "paths": [
      ".claude/agents"
    ]
  },
  "hooks": {
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PROJECT_ROOT}/.claude/hooks/ralph-wiggum/stop-hook.sh"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PROJECT_ROOT}/.claude/hooks/post-tool-use/auto-format.sh"
          }
        ]
      }
    ]
  }
}
